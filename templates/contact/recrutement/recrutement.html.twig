{% extends 'base.html.twig' %}

{% block title %}Hello RecrutementController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Offres d'emploi</h1>

		<ul>
			{% for offreEmploi in offresEmploi %}
				<li>
					<a href="{{ path('offre_emploi_show', {'id': offreEmploi.id}) }}">{{ offreEmploi.titre }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
